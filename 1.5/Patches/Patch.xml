    </value>
  </Operation>
  <!-- Charge cannon -->
  <Operation Class="PatchOperationConditional">
    <xpath>*/ThingDef[defName="ChargeCannon"]</xpath>
    <match Class="PatchOperationAdd">
      <xpath>*/ThingDef[defName="ChargeCannon"]/comps</xpath>
      <value>
        <li Class="TurretExtensions.CompProperties_Upgradable">
          <!-- Basics -->
          <description>Increases the charge cannon's overall accuracy, armor penetration and range. Gives decreased barrel durability but increased the rate of fire. Also makes it directly controllable by you.</description>
          <!-- Costs -->
          <costStuffCount>130</costStuffCount>
          <costList>
            <Steel>70</Steel>
            <Plasteel>40</Plasteel>
            <ComponentSpacer>2</ComponentSpacer>
          </costList>
          <researchPrerequisites>
            <li>ChargeCannon</li>
          </researchPrerequisites>
          <workToUpgrade>4000</workToUpgrade>
          <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
          <!-- Results -->
          <turretGunDef>Gun_ChargeCannonUpgraded</turretGunDef>
          <statOffsets>
            <ShootingAccuracyTurret>0.03</ShootingAccuracyTurret>
          </statOffsets>
          <basePowerConsumptionFactor>2</basePowerConsumptionFactor>
          <fuelMultiplierFactor>0.8</fuelMultiplierFactor>
          <turretBurstCooldownTimeFactor>0.75</turretBurstCooldownTimeFactor>
          <canForceAttack>true</canForceAttack>
        </li>
      </value>
    </match>
  </Operation>

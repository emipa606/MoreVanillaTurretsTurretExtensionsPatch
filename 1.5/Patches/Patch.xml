        <researchPrerequisites>
          <li>RocketComplex</li>
        </researchPrerequisites>
        <workToUpgrade>3000</workToUpgrade>
        <constructionSkillPrerequisite>7</constructionSkillPrerequisite>
        <!-- Results -->
